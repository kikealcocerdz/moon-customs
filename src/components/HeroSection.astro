<script
  src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs"
  type="module"></script>
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);
  const rightPerc = () => {
    if (window.innerWidth > 500) {
      return "5%";
    } else {
      return;
    }
  };
  const t1 = gsap.timeline({
    scrollTrigger: {
      trigger: ".heroImage",
      start: "top 20%",
      end: "bottom 20%",
      scrub: true,
    },
  });
  t1.to(".heroImage", {
    scale: 0.3,
    x: 140,
    y: -55,
  });
  t1.to(
    ".animated-name-1",
    {
      opacity: 0,
    },
    "<"
  );
  t1.to(
    ".animated-name-11",
    {
      opacity: 0,
    },
    0
  );
  t1.to(
    ".headerHero",
    {
      opacity: 1,
    },
    0
  );
  t1.set(".heroImage", {
    position: "fixed",
    top: "0px",
    right: rightPerc(),
    opacity: 1,
    duration: 3,
    zIndex: 100,
  });
</script>
